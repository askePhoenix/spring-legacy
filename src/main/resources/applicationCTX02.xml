<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd ">
    <bean id="stu2" class="com.my.test.home.Student">
        <constructor-arg index="0" value="아무개"/>
        <constructor-arg index="1" value="29"/>
        <constructor-arg index="2">
            <list>
                <value>노래</value>
                <value>댄스</value>
                <value>연기</value>
            </list>
        </constructor-arg>
        <property name="height" value="170"/>
        <property name="weight" value="60"/>
    </bean>
    <bean id="fam" class="com.my.test.home.Family"
          c:papa="김아빠" c:mama="김엄마"
          p:bro="김오빠" p:sis="김동생"/>
</beans>